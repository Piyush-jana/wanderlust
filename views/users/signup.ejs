<% layout("/layouts/boilerplate.ejs") %>

<body>
    

    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h1>SignUp on WanderLust</h1>
            <br>
            <br>
        </div>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">username :</label>
                    <input type="text" name="username" placeholder="enter your username" class="form-control" id="username" required>
                    <div class="valid-feedback">Username is Valid</div>
                    <div class="invalid-feedback">Choose a unique username</div>
                    <br>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" name="email" placeholder="enter your email" class="form-control" id="email" required>
                    <div class="valid-feedback">Email is Valid</div>
                    <div class="invalid-feedback">Choose a Valid Email</div>
                    <br>
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Password :</label>
                    <input type="password" name="password" placeholder="Enter your Password" id="Password" class="form-control" required>
                    <div class="valid-feedback">Strong Password</div>
                    <div class="invalid-feedback">choose a better password</div>
                    <br>
                </div>

                <button class="btn btn-success">SignUp</button>

            </form>

        </div>
    </div>
</body>