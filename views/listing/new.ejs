<% layout('/layouts/boilerplate.ejs') %>
<body>
    
    <br><br>

    <div class="row">

        <div class="col-8 offset-2">
            <h3>Create a new listing</h3>
            <br>


            <form action="/listing/new" method="post" class="needs-validation" novalidate enctype="multipart/form-data" onsubmit="submitCategory();">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" name="title" placeholder="enter title" class="form-control" required>
                    <div class="valid-feedback">Nice Title!</div>
                    <div class="invalid-feedback">Enter valid Title!</div>
                    <br>
                </div>
               <div class="mb-3">
                <label for="description" class="form-label">description:</label>
                <textarea name="description" id="description" placeholder="description" class="form-control" required></textarea>
                <div class="valid-feedback">Nice Description!</div>
                <div class="invalid-feedback">Enter valid description!</div><br>
               </div>
        
               <div class="mb-3">
                <label for="image" class="form-label">Image:</label>
                <input type="file" name="listing[image]" placeholder="Choose Image" class="form-control">
                <div class="valid-feedback">Looking Good!</div>
                <br>

                <div class="mb-3">
                      <label class="form-check-label" for="category">
                        Choose the Category:
                      </label>
                      <select class="form-select"  name="category" aria-label="Default select example">
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountain">Mountain</option>
                        <option value="Castle">Castle</option>
                        <option value="Artic">Artic</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                      </select>

                </div>
            
                    
                   
                 
               
               </div>
               
    
               <div class="row">
    
                <div class="mb-3 col-md-4" >
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" name="price" placeholder="enter price" class="form-control" required>
                    <div class="valid-feedback">Looking Good!</div>
                    <div class="invalid-feedback">Enter valid price!</div><br>
                </div>
    
                <div class="mb-3 col-md-8" >
                    <label for="country" class="form-label">Country:</label>
                    <input type="text" name="country" placeholder="enter country" class="form-control" required>
                    <div class="valid-feedback">Looking Good!</div>
                    <div class="invalid-feedback">Enter valid country!</div><br>
                </div>
    
               </div>
               
               <div class="mb-3">
                <label for="location" class="form-label">location:</label>
                <input type="text" name="location" placeholder="enter location" class="form-control" required>
                <div class="valid-feedback">Looking Good!</div>
                <div class="invalid-feedback">Enter valid location!</div><br>
               </div>
               
               
                
               
        
                <button class="btn btn-dark mb-3" type="submit">Add to the Listing</button><br><br>
                
                
        
            </form>
    


        </div>


       
    </div>

   
</body>
